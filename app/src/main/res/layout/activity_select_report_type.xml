<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.selectReportType.selectReportType">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="5dp"
        android:background="#ECEFF1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/orange_border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="140dp"
            android:orientation="horizontal"
            android:radius="100dp">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:onClick="getCallReport"
                android:radius="50dp"
                android:text="Call Report"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:drawableLeft="@drawable/ic_message_black_24dp"
                android:onClick="getMessageReport"
                android:paddingLeft="1dp"
                android:text="Message Report"
                android:textSize="21sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
