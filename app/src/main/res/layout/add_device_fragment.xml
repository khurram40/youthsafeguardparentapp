<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.AddDevice.AddDevice" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="How To Add Device ?"
        android:textColor="#FF9100"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Step 1:"
        android:textColor="#FF9100"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="340dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:editable="false"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:gravity="center|start"
        android:inputType="textMultiLine"
        android:linksClickable="false"
        android:longClickable="false"
        android:selectAllOnFocus="false"
        android:text="First of all download  Safegaurd's Child App from the Play store ."
        android:textColor="#5A5555"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Step 2:"
        android:textColor="#FF9100"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="340dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:editable="false"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:gravity="center|start"
        android:inputType="textMultiLine"
        android:linksClickable="false"
        android:longClickable="false"
        android:screenReaderFocusable="false"
        android:selectAllOnFocus="false"
        android:text="Now you have to Write you child name and Enter the same Mobile Number which you have  Entered while making Account on Safeguard parental App."
        android:textColor="#5A5555"
        android:textIsSelectable="false"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Step 3:"
        android:textColor="#FF9100"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="340dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:editable="false"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:gravity="center|start"
        android:inputType="textMultiLine"
        android:linksClickable="false"
        android:longClickable="false"
        android:selectAllOnFocus="false"
        android:text="Now Verify Your Mobile Number ,Enter the Code  which have Sent to you."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#5A5555"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        android:text="Step 4 :"
        android:textColor="#FF9100"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:editable="false"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:gravity="center|start"
        android:inputType="textMultiLine"
        android:linksClickable="false"
        android:longClickable="false"
        android:selectAllOnFocus="false"
        android:text="Press the Buttons Send MessageReport and Send Call Report .You Are All done ."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#5A5555"
        android:textSize="18sp" />

</LinearLayout>